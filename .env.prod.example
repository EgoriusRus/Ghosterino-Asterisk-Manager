# Production Environment Variables
# ВАЖНО: Скопируйте этот файл в .env.prod и измените значения!
# cp .env.prod.example .env.prod

# Database Configuration
DB_USER=asterisk_prod
DB_PASSWORD=CHANGE_ME_strong_random_password_123
DB_NAME=asterisk_manager_prod

# Application Configuration
APP_PORT=8080
APP_VERSION=1.0.0

# Asterisk Directories (на хосте)
# Убедитесь что эти директории существуют и доступны для записи
ASTERISK_TFTP_DIR=/srv/tftp
ASTERISK_USERS_DIR=/etc/asterisk/users
ASTERISK_EXT_DIR=/etc/asterisk/extensions
RESULTS_DIR=/opt/asterisk-manager/results

# Backup Configuration
BACKUP_DIR=/opt/asterisk-manager/backups
BACKUP_RETENTION_DAYS=30
